extends ../../layout/auth.pug
include ../../mixins/alert.pug

block main 
    +alert-danger(5000)
    +alert-success(5000)

    .container.my-5 
        .row.justify-content-center
            .col-5
                 form(action="/admin/auth/login", 
                method="post"
                ) 
                    h1(class="text-center") Đăng nhập
                    div(class="form-group mb-3 ")
                        label(for="email" class="tw-bold") Email
                        input(
                            type="text"
                            class="form-control w-100"
                            id="email"
                            name="email"
                            placeholder="Nhập Email"
                            )
                    div(class="form-group mb-3")
                        label(for="password" class="tw-bold") Mật Khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            placeholder="Nhập Mật Khẩu"
                            )
                    div(class="form-group mb-3 d-flex justify-content-center")
                        button(class="btn btn-primary") Đăng nhập
