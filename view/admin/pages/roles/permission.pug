extends ../../layout/default.pug
include ../../mixins/create_tree.pug
include ../../mixins/alert.pug
block title 
    title  title

block main 
    +alert-danger(5000)
    +alert-success(5000)

    h1(class= "mb-4") Phân quyền

    if(records)

        div(class="w-75 d-flex justify-content-end")
            button(class="btn btn-primary mb-3 "
            type="submit"
            button-submit) Cập nhật 
        
        each item in records 
            div(data-record=item.permission)


        table(class="table table-hover table-sm" table_permission)
            thead 
                tr
                    th Tính năng 
                    each item in records 
                        th(class="text-center") #{item.title}
            tbody    
                tr
                    td
                        b Chọn tất cả  
                    each item in records 
                        td(class="text-center" select-all)
                            input(type="checkbox") 
                    
                tr(class="d-none" data-name="id")
                    td
                        b id
                    each item in records 
                        td(class="text-center")
                            input(type="text" value = item.id) 
                    

                // danh mục sản phẩm
                tr(class="text-bg-secondary")
                    td(colspan="4")
                        b Danh mục sản phẩm 
                    tr(data-name="products-category_view")
                        td Xem
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      

                    tr(data-name="products-category_create")
                        td Tạo mới
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      

                    tr(data-name="products-category_edit")
                        td Chỉnh sửa
                         each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      
                            
                    tr(data-name="products-category_delete")
                        td Xóa
                         each item in records 
                            td(class="text-center")
                                input(type="checkbox") 


                // Sản phẩm
                tr(class="text-bg-secondary")
                    td(colspan="4")
                        b Sản phẩm 
                    tr(data-name="product_view")
                        td Xem
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      

                    tr(data-name="product_create")
                        td Tạo mới
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      

                    tr(data-name="product_edit")
                        td Chỉnh sửa
                         each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      
                            
                    tr(data-name="product_delete")
                        td Xóa
                         each item in records 
                            td(class="text-center")
                                input(type="checkbox") 

                // Nhóm quyền
                tr(class="text-bg-secondary")
                    td(colspan="4")
                        b Nhóm quyền
                    tr(data-name="roles_view")
                        td Xem
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      

                    tr(data-name="roles_create")
                        td Tạo mới
                        each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      

                    tr(data-name="roles_edit")
                        td Chỉnh sửa
                         each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      
                            
                    tr(data-name="roles_delete")
                        td Xóa
                         each item in records 
                            td(class="text-center")
                                input(type="checkbox") 
                      
                                


    else 
        h1 Chưa có nhóm quyền nào 
        div(class="d-flex justify-content-center")

            a(href="/admin/roles/create"
            class="btn btn-outline-success") + Thêm mới
    
    form(
        id="form-change-permission"
        action="/admin/roles/permission/?_method=PATCH"
        method="POST") 

        div(class="form-group d-none")
            input(
                type="text"
                class="form-control"
                name="permission")




    script(src="/admin/JS/permission.js") 