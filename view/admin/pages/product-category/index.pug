extends ../../layout/default.pug
include ../../mixins/filterstatus.pug
include ../../mixins/findbar.pug
include ../../mixins/pagination.pug
include ../../mixins/change_multi.pug
include ../../mixins/alert.pug
include ../../mixins/table-tree.pug

block title
    title title


block main
    +alert-danger(5000)

    h1  Danh mục sản phẩm
    .card.mb-3 
        .card-header Danh sách
        .card-body
            .row
                .col-8
                    a(href="/admin/product-category/create"
                    class="btn btn-outline-success") + Thêm mới
                .col-8 
                    div(sort class="d-flex")
                        select(
                        name="sort"
                        class="form-control"
                        sort-select
                        )
                          
                            option(value="position-desc") Vị trí giảm dần
                            option(value="position-asc") Vị trí tăng dần
                            option(value="title-asc") Tiêu đề A - Z
                            option(value="title-desc") Tiêu đề Z - A

                        button(
                        class="btn btn-danger mt-2 m-2"
                        sort-clear
                        ) Clear
                .row
                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT 
                            th Hình ảnh
                            th Tiêu đề
                            th Danh mục cha
                            th Vị trí 
                            th Trạng Thái
                            th Hành Động
                        

                    tbody 
                       +table-tree(records)
                           
                         
                        
    +pagination(pagination)
    form(action="", 
    method="POST",
    product-path="/admin/product/change-status"
    id="form-change-status")

    form(action="", 
    method="POST",
    product-path="/admin/product-category/delete"
    id="form-delete")

    script(src="/admin/JS/product.js") 