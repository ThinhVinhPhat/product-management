extends ../../layout/default.pug

block title 
    title title 

block main 
    h1(class= "mb-4") Thông tin tài khoản
    .row(class="d-flex" style="width: 100%")
        .col-4
            if(user.fullname)
                div(class="mb-4") Họ tên: <b>#{user.fullname}</b>

            if(user.email)
                div(class="mb-4") Email: <b>#{user.email}</b>
            if(user.phone)
                div(class="mb-4") Số điện thoại: <b>#{user.phone}</b>
            if(role.title)
                div(class="mb-4") Nhóm quyền: <b>#{role.title}</b>
        
            if(user.status)
                div(class="mb-4") 
                    span Trạng thái: 
                    if (user.status === "active") 
                        span(class="btn btn-success" style="padding:2px;" ) Hoạt động
                    else
                        span(class="btn btn-danger" style="padding:2px;") Dừng Hoạt động
                
                a(href=`/admin/account/my_account/edit`
                class="btn btn-warning"
                ) Chỉnh sửa 

        .col-4
            if(user.avatar)
                div(class="mb-4 d-flex justify-content-center")
                    img(src=user.avatar, alt="" class="w-100")