extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/create_tree.pug
block title 
    title  title

block main 
    +alert-danger(5000)

    h1(class= "mb-4") Thêm mới sản phẩm


    form(action="/admin/product/create"
    id="create-form"
    method= "POST"
    enctype="multipart/form-data"
    ) 

        div(class="form-group")
            label(for="ttile" class="tw-bold") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                )

        div(class="form-group mb-3")
            label(for="danhmuccha_id" class="tw-bold") Danh mục cha
            select(class="form-control" name="danhmuccha_id" id="danhmuccha_id")
                option(value="" ) -- Chọn danh mục cha --
                    if(categories)
                        +create_tree(categories)

        

        div(class="form-group")
            label(for="dsc") Mô tả
            textarea( 
                    class="form-control"
                    id="dsc"
                    name="description"  
                    rows="5"
                    )
        div(class="form-group")
            label(for="pe") Giá
            input(type="number"
                class="form-control"
                id="pe"
                name="price"
                value="0"
                min="0"
                )

        div(class="form-group")
            label(for="dic") % Giảm giá
            input(type="number"
            class="form-control"
            id="dic"
            name="discountPercentage"
            value="0"
            min="0"
            )

        div(class="form-group")
            label(for="stock") Số lượng 
            input(type="number"
            class="form-control"
            id="stock"
            name="stock"
            value="0"
            min="0"
            ) 
            
        div(class="form-group"  style="margin: 15px;" upload-image)
            label(for="img" style="margin-right: 15px;") Ảnh
            input(type="file"
            id="img"
            class="form-control-file"
            name="thumbnail"
            accept="image/*"
            upload-image-input
            )

            img(src="" 
            upload-image-preview 
            class="upload-img-preview")

        div(class="form-group")
            label(for="position") Vị trí
            input(type="text"
            class="form-control"
            id="position"
            name="position"
            placeholder="Tự động tăng"
            min="1")

        div(class="form-group form-check form-check-inline")
            input(type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked)
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive")
            label(for="statusInactive" class="form-check-label") Dừng Hoạt động
        
        div(class="form-group")
        button(type="submit"
        class="btn btn-primary") Tạo mới

    script(src="/admin/JS/product.js") 
    