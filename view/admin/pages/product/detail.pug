extends ../../layout/default.pug

block title 
    title title 

block main 
    h1(class= "mb-4") Chi tiết sản phẩm

    if(product.title)
        div(class="mb-4") Tên sản phẩm: <b>#{product.title}</b>

    if(product.description)
        div(class="mb-4") Mô tả: <b>!{product.description}</b>
    if(product.price)
        div(class="mb-4") Giá: <b>#{product.price}$</b>
    if(product.discountPercentage)
        div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}$</b>
    if(product.stock)
        div(class="mb-4") Số lượng: <b>#{product.stock}</b>
    if(product.thumbnail)
        div(class="mb-4") Hình ảnh: 
            img(src=product.thumbnail, alt="", style="width: 100px;")

    if(product.status)
        div(class="mb-4") 
            span Trạng thái: 
            if (product.status === "active") 
                span(class="btn btn-success" style="padding:2px;" ) Hoạt động
            else
                span(class="btn btn-danger" style="padding:2px;") Dừng Hoạt động
    
    if(role.permission.includes("product_detail"))

        a(href=`/admin/product/edit/${product.id}`
        class="btn btn-warning"
        ) Chỉnh sửa 