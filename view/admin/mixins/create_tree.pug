mixin create_tree(items,level = 1,danhmuccha_id="")
    each item in items 
        - const prefix = Array(level + 1).join("--")
        option(value= item.id
        selected = (item.id === danhmuccha_id ? true : false)
        
        ) #{prefix}#{item.title}
            if item.children && item.children.length >0
                +create_tree(item.children, level+1,danhmuccha_id)