extends ../../layout/default.pug
include ../../../admin/mixins/moment.pug

block title 
    title #{titlePage}


block main
    .container.w-100

        a(href=`/product` class="m-1 text-decoration-none fw-bold")  Trang Chủ > 
        a(href=`/news` class="m-1 text-decoration-none fw-bold text-warning")  Tin tức 
        
        .row-sm-12.row-lg-6.d-flex.w-100.mt-5
            .col-4.m-1
                .row.d-flex.flex-row
                    h3 Danh mục
                    each item in Product_category
                        .col-4.d-flex.w-100.m-1
                            .product-item.d-flex.m-1.w-100
                                    .inner-imgae.d-flex.justify-content-center.w-25.text-bg-secondary
                                        img(src=item.thumbnail, alt=item.title class="w-100" style="height: 95%; margin-top:10px;")
                                    .inner-content.d-flex.text-center.mt-3
                                        a(href=`/news/category/${item.slug}`) 
                                            p.inner-title(style="width: 200%;") #{item.title}
                             
                                
            .col-md-9.col-12.m-1
                .choice.w-100.position-relative(style="width: 20%;")
                    .row
                        each item in News
                                .col-xl-5.col-lg-7.col-md-7.col-sm-7.col-13.mb-3.m-1
                                    .product-item.w-100 
                                        .inner-imgae.d-flex.justify-content-center.position-relative.w-100
                                            img(src=item.thumbnail, alt=item.title class="w-100")
                                            if item.featured == "yes"
                                                .feature.position-absolute
                                                    p Nổi bật
                                        .inner-content
                                            a(href=`/news/detail/${item.slug}`) 
                                                h3.inner-title #{item.title}
                                            .date.d-flex
                                                i.fa-solid.fa-calendar-days.m-1
                                                +formateDate(item.createdBy.createdAt)
                                            p !{item.short_description} 