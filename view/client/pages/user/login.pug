extends ../../layout/default.pug
include ../../mixins/product_layout.pug
include ../../mixins/alert.pug

block title 
    title #{titlePage}


block main
    +alert-danger(5000)
    +alert-success(5000)
    .container.my-5
        .row.justify-content-center
            .col-8
              
                h1(class="text-success") Đăng nhập
                form(action="/user/login", method="post") 
                    div(class="form-group")
                        label(for="fullname") Email
                        input(type="text"
                        class="form-control"
                        name="email"
                        id="email"
                        )
                    div(class="form-group position-relative")
                        label(for="fullname") Mật khẩu
                        input(type="password"
                        class="form-control  "
                        name="password"
                        id="password"
                        password
                        )
                        i(class="fa-solid fa-eye position-absolute" style="top:55%; right:2%; cursor:pointer;" showpassword)
                    div(class="form-group m-2 d-flex justify-content-center")
                        button(class="btn btn-primary" type="submit") Đăng nhập


                div(class="mt-1 d-flex justify-content-center")
                    a(href="/user/password/forgot" style="text-decoration: none;")  Quên mật khẩu?
    script(src="/Js/password.js") 
    